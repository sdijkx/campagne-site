{% macro meer_items(path,params,count,limit) %}
    {%if count>limit %}
        {% set params=params|merge({limit:limit+10}) %}
        <div class="meer-items">
            <a href="{{path(path,params)}}">Meer</a>
        </div>
    {%endif%}
{%endmacro%}

