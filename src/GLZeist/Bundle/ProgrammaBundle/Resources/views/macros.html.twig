{%macro kruimelpad(breadcrumb) %}
    
    {%if breadcrumb is defined%}
        <div class="kruimelpad">
            {%for crumb in breadcrumb%}
                {%if not loop.last%}
                    <a href="{{crumb.url}}">{{crumb.name}}</a>&nbsp;&raquo;&nbsp;
                {%else%}
                    {{crumb.name}}
                {%endif%}
            {%endfor%}
        </div>
    {%endif%}
{%endmacro%}

{%macro link(url,titel) %}
    <span class="link">&rsaquo;&nbsp;<a href={{url}} title="{{titel}}">{{titel}}</a></span>
{%endmacro%}

{%macro introductie(speerpunten,hoofdstukken) %}
{%import _self as _ %}
<div class="introductie clearfix"">
    <div class="spotlicht">
        <div class="afbeelding"></div>
        <div class="actief"></div>        
        {%for speerpunt in speerpunten%}
            <div class="speerpunt {%if loop.index==1%}focus{%endif%}" no="{{loop.index-1}}">
                <div class="titel">
                    <a href="{{speerpunt.url}}">{{speerpunt.titel}}</a>
                </div>
                <div class="afbeelding">
                    <img src="{{speerpunt.afbeelding}}" alt="{{speerpunt.titel}}">
                </div>
                <div class="content {%if loop.index==1%}focus{%endif%}">
                    <span>{{speerpunt.content}}</span>
                </div>
            </div>
        {%endfor%}
    </div>
    <div class="promotie">
        <h3>Zeist</h3>
        <ul>
            {%for hoofdstuk in hoofdstukken %}
                <li>{{_.link(path('hoofdstuk',{slug:hoofdstuk.slug}),hoofdstuk.titel)}}</li>
            {%endfor%}
        </ul>
    </div>

</div>
{%endmacro%}

