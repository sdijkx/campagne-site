{% extends "GLZeistProgrammaBundle::admin.html.twig" %} 
{%block content%}
<h1>Speerpunt</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Titel</th>
            <td>{{ entity.titel }}</td>
        </tr>
        <tr>
            <th>Slug</th>
            <td>{{ entity.slug }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('admin_speerpunt') }}">
            Terug naar het overzicht
        </a>
    </li>
    <li>
        <a href="{{ path('speerpunt_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('speerpunt_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Verwijderen</button>
        </form>
    </li>
</ul>
{%endblock%}