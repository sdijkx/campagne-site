{% extends "GLZeistProgrammaBundle::admin.html.twig" %} 
{%block content%}
<h1>Speerpunt bewerken</h1>
<ul class="record_actions">
    <li>
        <a href="{{ path('admin_speerpunt') }}">
            Terug naar het overzicht
        </a>
    </li>
    <li>
        {{macros.delete_form('speerpunt_delete',delete_form,entity)}}
    </li>
</ul>

<form action="{{ path('speerpunt_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_row(edit_form.titel) }}
    {{ form_row(edit_form.content) }}
    {{ form_row(edit_form.url) }}
    <div>
        <img src="{{path('file',{filename:entity.afbeelding})}}" />
    </div>
    {{ form_row(edit_form.file) }}
    {{ form_row(edit_form._token) }}
    <div class="form_actions">
        <button type="submit">Opslaan</button>
    </div>
</form>

{%endblock%}