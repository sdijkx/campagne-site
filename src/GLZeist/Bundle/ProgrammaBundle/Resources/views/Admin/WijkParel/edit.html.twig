{% extends "GLZeistProgrammaBundle::admin.html.twig" %} 
{%block content%}
<h1>Wijk Parel bewerken - {{entity.slug}}</h1>
<ul class="record_actions">
    <li>
        <a href="{{ path('admin_wijk_edit',{id:entity.wijk.id}) }}">
            Terug naar de wijk
        </a>
    </li>
    <li>
        {{macros.delete_form('admin_wijkparel_delete',delete_form,entity)}}
    </li>
</ul>
<form action="{{ path('admin_wijkparel_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_row(edit_form.titel) }}
    {{ form_row(edit_form.samenvatting) }}
    {{ form_row(edit_form.tekst) }}

    {% form_theme edit_form.links 'GLZeistProgrammaBundle:Admin/Item:links_collection_widget.html.twig' %}
    <div class="form_row">
        {{ form_label(edit_form.links) }}
        {{ form_widget(edit_form.links) }}
    </div>

    {% form_theme edit_form.afbeeldingen 'GLZeistProgrammaBundle:Admin/Item:afbeeldingen_collection_widget.html.twig' %}
    <div class="form_row">
        {{ form_label(edit_form.afbeeldingen) }}
        {{ form_widget(edit_form.afbeeldingen) }}
    </div>

    {{ form_row(edit_form.trefwoorden) }}

    {{form_rest(edit_form)}}
    <div class="form_actions">
        <button type="submit">Opslaan</button>
    </div>
</form>

<script>
    require(["ckeditor/ckeditor"], function() {
        CKEDITOR.replace('glzeist_bundle_programmabundle_wijkpareltype_samenvatting');
        CKEDITOR.replace('glzeist_bundle_programmabundle_wijkpareltype_tekst');
    });
</script>

{%endblock%}