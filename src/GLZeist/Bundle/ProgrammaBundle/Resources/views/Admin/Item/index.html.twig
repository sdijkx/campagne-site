{% extends "GLZeistProgrammaBundle::admin.html.twig" %} {%block content%}<h1>Item list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Titel</th>
            <th>Basistekst</th>
            <th>Hoofdtekst</th>
            <th>Tweet</th>
            <th>Verantwoording</th>
            <th>Voorstellen</th>
            <th>Slug</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('item_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.titel }}</td>
            <td>{{ entity.basistekst }}</td>
            <td>{{ entity.hoofdtekst }}</td>
            <td>{{ entity.tweet }}</td>
            <td>{{ entity.verantwoording }}</td>
            <td>{{ entity.voorstellen }}</td>
            <td>{{ entity.slug }}</td>
            <td>
                <ul  class="actions">
                    <li>
                        <a href="{{ path('item_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('item_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul  class="actions">
    <li>
        <a href="{{ path('item_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{%endblock%}