{% extends "GLZeistProgrammaBundle::admin.html.twig" %} 
{%block content%}
<h1>Thema bewerken</h1>
<ul class="record_actions">
    <li>
        <a href="{{ path('admin_thema') }}">
            Terug naar het overzicht
        </a>
    </li>
    <li>
        {{macros.delete_form('thema_delete',delete_form,entity)}}
