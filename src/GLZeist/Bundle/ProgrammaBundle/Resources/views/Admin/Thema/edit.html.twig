{% extends "GLZeistProgrammaBundle::admin.html.twig" %} 
{%block content%}
<h1>Thema edit</h1>

<form action="{{ path('thema_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Opslaan</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('admin_thema') }}">
            Terug naar het overzicht
        </a>
    </li>
    <li>
        <form action="{{ path('thema_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Verwijderen</button>
        </form>
    </li>
</ul>
<script>
    CKEDITOR.replace('glzeist_bundle_programmabundle_thematype_tekst');
</script>

{%endblock%}