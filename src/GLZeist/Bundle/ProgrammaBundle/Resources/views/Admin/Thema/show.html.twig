{% extends "GLZeistProgrammaBundle::admin.html.twig" %} 
{%block content%}
<h1>Thema</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Titel</th>
            <td>{{ entity.titel }}</td>
        </tr>
        <tr>
            <th>Slug</th>
            <td>{{ entity.slug }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('admin_thema') }}">
            Terug naar het overzicht
        </a>
    </li>
    <li>
        <a href="{{ path('thema_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        {{macros.delete_form('thema_delete',delete_form,entity)}}
    </li>
</ul>
{%endblock%}