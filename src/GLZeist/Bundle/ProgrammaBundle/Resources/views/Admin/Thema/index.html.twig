{% extends "GLZeistProgrammaBundle::admin.html.twig" %} 
{%block content%}
<h1>Thema list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Titel</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td class="left">{{ entity.titel }}</td>
            <td >
                <ul class="actions">
                    <li>
                        <a href="{{ path('thema_edit', { 'id': entity.id }) }}">Bewerk</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul class="actions">
    <li>
        <a href="{{ path('thema_new') }}">
            Nieuw thema toevoegen
        </a>
    </li>
</ul>
{%endblock%}