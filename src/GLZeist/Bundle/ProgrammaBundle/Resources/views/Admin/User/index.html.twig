{% extends "GLZeistProgrammaBundle::admin.html.twig" %} 
{%block content%}
<h1>Gebruikers overzicht</h1>

<ul class="actions">
    <li>
        <a href="{{ path('user_new') }}">
            Nieuwe gebruiker toevoegen
        </a>
    </li>
</ul>

<table class="records_list">
    <thead>
        <tr>
            <th class="edit"></th>
            <th>Username</th>
            <th>Email</th>
            <th>Rol</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td >
                <a class="button" title="Bewerk" href="{{ path('user_edit', { 'id': entity.id }) }}"><span class="icon-pencil">&nbsp;</span></a>
            </td>
            <td class="left">{{ entity.username }}</td>
            <td class="left">{{ entity.email }}</td>
            <td class="left">{{ entity.role }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{%endblock%}