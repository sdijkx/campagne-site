{% extends "GLZeistProgrammaBundle::admin.html.twig" %} 
{%block content%}

<h1>Hoofdstukken</h1>

<table class="records_list">
    <thead>
        <tr>
            <th class="edit"></th>
            <th>Volgnummer</th>
            <th>Titel</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td >
                <a class="button" title="Bewerk" href="{{ path('hoofdstuk_edit', { 'id': entity.id }) }}"><span class="icon-pencil">&nbsp;</span></a>
            </td>
            <td class="left">{{ entity.volgnummer }}</td>
            <td class="left">{{ entity.titel }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul class="actions">
    <li>
        <a href="{{ path('hoofdstuk_new') }}">
            Toevoegen
        </a>
    </li>
</ul>

{%endblock%}