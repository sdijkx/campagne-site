{% extends "GLZeistProgrammaBundle::admin.html.twig" %} {%block content%}<h1>Paragraaf list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Titel</th>
            <th>Slug</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('paragraaf_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.titel }}</td>
            <td>{{ entity.slug }}</td>
            <td>
                <ul class="actions">
                    <li>
                        <a href="{{ path('paragraaf_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('paragraaf_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul class="actions">
    <li>
        <a href="{{ path('paragraaf_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{%endblock%}