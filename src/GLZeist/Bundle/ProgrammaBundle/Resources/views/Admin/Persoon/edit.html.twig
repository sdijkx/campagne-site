{% extends "GLZeistProgrammaBundle::admin.html.twig" %} 
{%block content%}
<h1>Bewerk Persoon</h1>
<ul class="record_actions">
    <li>
        <a href="{{ path('admin_persoon') }}">
            Terug naar het overzicht
        </a>
    </li>
    <li>
        <form action="{{ path('admin_delete_persoon', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Verwijderen</button>
        </form>
    </li>
</ul>
<form action="{{ path('admin_update_persoon', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <div class="form_row">
        <label>Afbeedling</label>
        <div class="upload_image">
            <img src="{{path('file',{filename:entity.imagefile})}}" />
            <img src="{{path('file',{filename:entity.thumbfile})}}" />
        </div>
    </div>

    <div class="form_actions">
        <button type="submit">Opslaan</button>
    </div>
</form>

<script>
    CKEDITOR.replace('glzeist_bundle_programmabundle_persoontype_personalia');
</script>

{%endblock%}