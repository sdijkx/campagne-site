{% extends "GLZeistProgrammaBundle::admin.html.twig" %} 
{%block content%}
<h1>Nieuwe Kandidaten</h1>
<ul class="record_actions">
    <li>
        <a href="{{ path('admin_kandidaat') }}">
            Terug naar het overzicht
        </a>
    </li>
</ul>
<form action="{{ path('admin_create_kandidaat', { 'id': entity.id }) }}" method="post" {{ form_enctype(form) }}>
    {{ form_widget(form) }}
    <div class="form_actions">
        <button type="submit">Opslaan</button>
    </div>
</form>
<script>
    require(["ckeditor/ckeditor"], function() {
        CKEDITOR.replace('glzeist_bundle_programmabundle_kandidaattype_personalia');
        CKEDITOR.replace('glzeist_bundle_programmabundle_kandidaattype_promo');
    });
</script>

{%endblock%}