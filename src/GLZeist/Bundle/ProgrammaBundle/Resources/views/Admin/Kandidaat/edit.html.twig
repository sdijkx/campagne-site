{% extends "GLZeistProgrammaBundle::admin.html.twig" %} 
{%block content%}
<h1>Bewerk Kandidaat</h1>
<ul class="record_actions">
    <li>
        <a href="{{ path('admin_kandidaat') }}">
            Terug naar het overzicht
        </a>
    </li>
    <li>
        {{macros.delete_form('admin_delete_kandidaat',delete_form,entity)}}
    </li>
</ul>
<form action="{{ path('admin_update_kandidaat', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <div class="form_row">
        <label>Afbeedling</label>
        <div class="upload_image">
            <img src="{{path('file',{filename:entity.imagefile})}}" />
            <img src="{{path('file',{filename:entity.thumbfile})}}" />
        </div>
    </div>

    <div class="form_actions">
        <button type="submit">Opslaan</button>
    </div>
</form>


<script>
    require(["ckeditor/ckeditor"], function() {
        CKEDITOR.replace('glzeist_bundle_programmabundle_kandidaattype_personalia');
        CKEDITOR.replace('glzeist_bundle_programmabundle_kandidaattype_promo');
    });
</script>

{%endblock%}