{% extends "GLZeistProgrammaBundle::admin.html.twig" %} {%block content%}<h1>Trefwoord list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Trefwoord</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td class="left">{{ entity.trefwoord }}</td>
            <td>
                <form action="{{ path('trefwoord_delete', { 'id': entity.id }) }}" method="post">
                    <button type="submit">Verwijderen</button>
                </form>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul class="actions">
    <li>
        <a href="{{ path('trefwoord_new') }}">
            Nieuw trefwoord toevoegen
        </a>
    </li>
</ul>
{%endblock%}