{% extends "GLZeistProgrammaBundle::admin.html.twig" %} 
{%block content%}
<h1>Trefwoord list</h1>
<ul class="actions">
    <li>
        <a href="{{ path('trefwoord_new') }}">
            Nieuw trefwoord toevoegen
        </a>
    </li>
</ul>

<table class="records_list">
    <thead>
        <tr>
            <th class="remove"></th>
            <th>Trefwoord</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>
                <form action="{{ path('trefwoord_delete', { 'id': entity.id }) }}" method="post">
                    <button title="Verwijderen" type="submit" onclick="return confirm('Weet u zeker dat u wilt verwijderen?')"><span class="icon-cancel-circled">&nbsp;</span></button>
                </form>
            </td>
            <td class="left">{{ entity.trefwoord }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{%endblock%}