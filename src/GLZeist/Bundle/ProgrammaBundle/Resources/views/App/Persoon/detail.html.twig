{% extends "GLZeistProgrammaBundle::base.html.twig" %} 

{%block title%}{{persoon.naam}}{%endblock%}

{%block content%}

<article class="persoon">
    <h1>{{persoon.naam}}</h1>
    <h2>{{persoon.functie}}</h2>
    <p>
        {{persoon.personalia|raw}}
    </p>
</article>

{%endblock%}

{%block rightcolumn%}
    {%if persoon.imagefile %}
        <div id="afbeelding">
            <div class="image">
                <img src="{{path('file',{filename:persoon.imagefile})}}" />
            </div>
        </div>
    {%endif%}
{%endblock%}