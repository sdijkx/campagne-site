
{%set current = app.request.baseUrl ~ app.request.pathInfo %}

<ul>
    {%set url=path('home') %}
    {%set active= (current== url) %}
    <li {%if active %}class="actief"{%endif%} ><a href="{{url}}">Home</a></li>
    {%for entity in themas()%}
        {%set url=path('thema',{slug:entity.slug}) %}
        {%set active= (thema is defined and entity.slug==thema.slug ) %}
        <li {%if active %}class="actief"{%endif%}><a href="{{url}}">{{entity.titel}}</a></li>
    {%endfor%}
    {%set url=path('hoofdstuk_index') %}
    {%set active= (current== url or app.request.get('_route')=='hoofdstuk') %}
    <li {%if active %}class="actief"{%endif%}><a href="{{url}}">Programma</a> </li>
    {%set url=path('persoon_index') %}
    {%set active= (current== url or app.request.get('_route')=='persoon') %}
    <li {%if active %}class="actief"{%endif%}><a href="{{url}}">Wie wij zijn</a> </li>
</ul>

