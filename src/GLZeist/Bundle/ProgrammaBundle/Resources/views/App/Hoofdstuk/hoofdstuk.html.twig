{% extends "GLZeistProgrammaBundle::base.html.twig" %} 
{%block title%}{{hoofdstuk.titel}}{%endblock%}
{%block seo%}
    <meta name="description" content="{{hoofdstuk.metaDescription}}">
{%endblock%}

{%block content%}

<div id="hoofdstuk-header">
    <h1 id="hoofdstuk-titel">{{hoofdstuk.titel}}</h1>
    {{hoofdstuk.samenvatting|raw}}
</div>

<article class="tekst">
    
    <p>
    {{hoofdstuk.tekst|raw}}
    </p>
</article>


{%endblock%}

{%block rightcolumn%}
    <ul class="links">
    {%for item in items%}
        <li class="link-item">{{glzeist.link(path('item',{hoofdstuk:item.hoofdstuk,slug:item.slug}),item.titel)}}</li>
    {%endfor%}
    </ul>
    <br/>
    {{glzeist.twitter_widget(site.twitter)}}
{%endblock%}