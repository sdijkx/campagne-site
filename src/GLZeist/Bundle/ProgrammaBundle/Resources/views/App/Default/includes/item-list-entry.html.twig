<article class="list-item">
    <h2 class="list-item-titel">
        <a href="{{path('item',{thema:item.thema.slug,slug:item.slug})}}"">{{item.titel}}</a>
    </h2>
    <div class="meta"><span class="geplaatst">{{item.gepubliceerdOp|date('d-m-Y')}}</span></div>
    <div>
        {%if item.thumbfile %}
            <div class="thumb">
                <img src="{{path('file',{filename:item.thumbfile})}}" />
            </div>
        {%endif%}
        <div class="kernboodschap">
            {{item.kernboodschap|raw}}
        </div>
    </div>
    {%if item.trefwoorden|length > 0 %}
        <div class="trefwoorden">
            <strong>Trefwoorden:</strong>
            {%for trefwoord in item.trefwoorden %}
                <a href="{{path('trefwoord',{slug:trefwoord.slug})}}" title="{{trefwoord.trefwoord}}">{{trefwoord.trefwoord}}</a>
            {%endfor%}
        </div>
    {%endif%}
</article>